{% extends 'base.html.twig' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ block('title') }}</h1>

    <p>{{ 'api_available.w3c'|trans({'available': w3c_available}) }}</p>
    <p>{{ 'api_available.craft'|trans({'available': craft_available}) }}</p>
    <p>{{ 'specifications_found'|trans({'total': specifications.total, 'cache': specifications_cache_hit}) }}</p>

    <dl>
        <dt>Lang:</dt>
        <dd id="lang">{{ app.request.locale }}</dd>
        <dt>Route:</dt>
        <dd id="route">{{ route }}</dd>
    </dl>
</div>
{% endblock %}
